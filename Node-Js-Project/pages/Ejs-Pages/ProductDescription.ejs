<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('../Layout/Header.ejs') %>
    <link rel="stylesheet" href="/css/home.css">
</head>

<body class="product-body">
  <%- include('../Layout/Navbar.ejs') %>


<div class="main-desc">
  <div class="page-title">Welcome to Product Description Page</div>

  <div class="container-desc">
    <div>
      <img src="<%= product.imageUrl %>" alt="product">
    </div>
    <div class="product-details">
      <div class="product-name">Name: <b><%= product.title %></b></div>
      <div class="product-desc">Desc: <b><%= product.desc %></b></div>
      <div class="product-price">Price: <b><%= product.price %></b></div>
      <div class="product-delivery">Delivery: <b><%= product.delivery %></b></div>
      <%- include('../Ejs-Pages/BuyNow.ejs', { product: product }) %>
    </div>
  </div>

  <div class="back-btn-wrapper">
    <a href="/product">
      <button class="desc-back-btn">
        <svg xmlns="http://www.w3.org/2000/svg" height="24px" viewBox="0 -960 960 960" width="24px" fill="#fff">
          <path d="m313-440 224 224-57 56-320-320 320-320 57 56-224 224h487v80H313Z" />
        </svg>
        Back
      </button>
    </a>
  </div>
</div>


</body>

</html>